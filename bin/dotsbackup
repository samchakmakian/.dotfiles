#!/bin/bash

# Add all desired dotfiles paths to git repo here
declare -a dotpaths=(
"bin"
".bashrc"
".nanorc"
".config/hypr"
".config/kitty"
".config/swayidle"
".config/swaylock"
".config/waybar"
".config/wofi"
".config/wlogout"
)

# Functions to add, commit and push backups
function dotadd () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add $1
}

function dotcommit () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME commit -m "Updated ${backupdate[0]}"
}

function dotpush () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME push -u origin main
}

cd

# Grab date
backupdate=()
todaysdate=$(date +"%m-%d-%Y")
backupdate+=($todaysdate)

echo '\nAdding dotfiles...'
sleep .5
for i in "${!dotpaths[@]}"
do
    counter=$((i+1))
    echo "Adding ${dotpaths[$i]} (item $counter of "${#dotpaths[@]}")"
    dotadd ${dotpaths[$i]}
done
sleep 1

echo '\nCommitting...'
dotcommit
sleep 1

echo '\nPushing...'
dotpush

echo '\nBackup complete!'

