#!/bin/bash

# Add all desired dotfiles paths to git repo
DOTPATHS='
bin
.bashrc
.config/hypr
.config/waybar
.config/swayidle
.config/swaylock
.config/wofi
.config/kitty
.config/wlogout'

# Functions to add, commit and push backups
function dotadd () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add $1
}

function dotcommit () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME commit -m "Updated ${backupdate[0]}"
}

function dotpush () {
    /usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME push -u origin main
}

# Grab date
backupdate=()
todaysdate=$(date +"%m-%d-%Y")
backupdate+=($todaysdate)

echo 'Adding dotfiles...'
dotadd $DOTPATHS
sleep 1

echo 'Committing...'
dotcommit
sleep 1

echo 'Pushing...'
dotpush

